<!DOCTYPE html>
<html>
  <head>
		<title>
			<%= complete_title(yield(:title)) %>
		</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Selloff" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Selloff" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%#render 'shared/form_errors' %>
			 <div class="container-fluid">
			 	<div class="row">
					<div class="col-md-2">
						<div class="bid-content rounded">
							<%= render 'layouts/sidebar' %>
						</div>
					</div>
					<div class="col-md-10">
							<%= yield %>

							<%= debug(params) if Rails.env.development? %>
					</div>
			 	</div>
			 </div>
    </main>
  </body>
</html>
