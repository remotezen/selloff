<!DOCTYPE html>
<html>
  <head>
		<%= include_gon %>
		<title>
			<%= complete_title(yield(:title)) %>
		</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Selloff" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Selloff" %>">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/menu' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <%#render 'shared/form_errors' %>
			 <div class="container-fluid">
			 	<div class="row">
					<div class="col-md-6 col-md-offset-3 centered">
						<%#get links to products begin watched %>
						<%= yield %>
					</div>
			 	</div>

			 </div>
    </main>
						<%= debug(params) if Rails.env.development? %>
  </body>
</html>
