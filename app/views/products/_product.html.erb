<div class="row image_container <%= cycle('image_odd', 'image_even') %>"> 
<div class="col-md-4">
			<%=image_link product.product_attachments[0].image.medium.url, product_path(product)%>
		</div>
		<div class="col-md-4">
			<h3>
				<%= product.name %>
			</h3>
		</div>
		<div class="col-md-4">
			<h5>
				<%= product.description %>
			</h5>
		</div>
		<div class="row">
			<div class="col-md-4">
				<%= render partial: 'shared/index_bid_stats', locals: {product: product} %>
			</div>
			<div class="col-md-4">
			</div>
			<div class="col-md-4">
			</div>
		</div>
		<%= render partial: @watches, locals:{product: product} %>
</div>





